{
  "name": "noctis-ui",
  "version": "1.0.0",
  "description": "A UI component library based on Tailwind CSS.",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "test": "echo \"Error: no test specified\" && exit 1",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "prepack": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jarretthuang/noctis-ui.git"
  },
  "keywords": [
    "javascript",
    "ui",
    "react",
    "css",
    "tailwind"
  ],
  "author": "Jarrett Huang <jarrett.huang@jhuang.ca>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jarretthuang/noctis-ui/issues"
  },
  "homepage": "https://github.com/jarretthuang/noctis-ui#readme",
  "devDependencies": {
    "auto-changelog": "^2.4.0",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.7.4"
  }
}
