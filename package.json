{
  "name": "noctis-ui",
  "version": "1.0.4",
  "description": "A framework-independent UI component library based on Tailwind CSS.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/components/components.esm.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jarretthuang/noctis-ui.git"
  },
  "keywords": [
    "javascript",
    "typescript",
    "ui",
    "react",
    "css",
    "tailwind",
    "html",
    "web component"
  ],
  "author": "Jarrett Huang <jarrett.huang@jhuang.ca>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jarretthuang/noctis-ui/issues"
  },
  "homepage": "https://github.com/jarretthuang/noctis-ui#readme",
  "devDependencies": {
    "@stencil/core": "^3.0.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.11",
    "auto-changelog": "^2.4.0",
    "jest": "^27.5.1",
    "jest-cli": "^27.5.1",
    "open-cli": "^7.1.0",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.5",
    "puppeteer": "^19.5.2",
    "stencil-tailwind-plugin": "^1.7.0",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5"
  }
}
